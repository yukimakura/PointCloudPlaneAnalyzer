<Window x:Class="PointCloudPlaneAnalyzer.Views.PlaneDetectWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="240" Width="320" >
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,94,0,0" TextWrapping="Wrap" Text="{Binding TextBoxText}" VerticalAlignment="Top" Width="120"/>
        <Label Content="{Binding PropName}" HorizontalAlignment="Left" Margin="100,63,0,0" VerticalAlignment="Top"/>
        <Button Content="実行" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Command="{Binding ExtractPlaneCommand}"/>


    </Grid>
</Window>
